// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Block {
  id          Int           @id @default(autoincrement())
  hash        String        @unique
  number      Int           @unique
  timestamp   DateTime
  Transaction Transaction[]
  Reserves    Reserves[]
}

model Token {
  id     Int    @id @default(autoincrement())
  hash   String @unique
  name   String
  symbol String
  Pair0  Pair[] @relation(name: "Pair0")
  Pair1  Pair[] @relation(name: "Pair1")
}

model Reserves {
  id          Int      @id @default(autoincrement())
  Block       Block    @relation(fields: [blockNumber], references: [number])
  blockNumber Int
  Pair        Pair     @relation(fields: [pairHash], references: [hash])
  pairHash    String
  reserve0    String
  reserve1    String
  timestamp   DateTime

  @@unique([blockNumber, pairHash])
}

model Pair {
  id       Int        @id @default(autoincrement())
  hash     String     @unique
  factory  String
  Token0   Token      @relation(name: "Pair0", fields: [token0], references: [hash])
  token0   String
  Token1   Token      @relation(name: "Pair1", fields: [token1], references: [hash])
  token1   String
  Reserves Reserves[]
  Mint     Mint[]
  Burn     Burn[]
  Swap     Swap[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  hash        String   @unique
  Block       Block    @relation(fields: [blockNumber], references: [number])
  blockNumber Int
  index       Int
  timestamp   DateTime
  Mint        Mint[]
  Burn        Burn[]
  Swap        Swap[]

  @@unique([hash, index])
}

model Mint {
  id              Int         @id @default(autoincrement())
  Transaction     Transaction @relation(fields: [transactionHash], references: [hash])
  transactionHash String
  Pair            Pair        @relation(fields: [pairHash], references: [hash])
  pairHash        String
  index           Int
  sender          String
  amount0         String
  amount1         String

  @@unique([transactionHash, index])
}

model Burn {
  id              Int         @id @default(autoincrement())
  Transaction     Transaction @relation(fields: [transactionHash], references: [hash])
  transactionHash String
  Pair            Pair        @relation(fields: [pairHash], references: [hash])
  pairHash        String
  index           Int
  sender          String
  amount0         String
  amount1         String
  to              String

  @@unique([transactionHash, index])
}

model Swap {
  id              Int         @id @default(autoincrement())
  Transaction     Transaction @relation(fields: [transactionHash], references: [hash])
  transactionHash String
  Pair            Pair        @relation(fields: [pairHash], references: [hash])
  pairHash        String
  index           Int
  sender          String
  amount0In       String
  amount1In       String
  amount0Out      String
  amount1Out      String
  to              String

  @@unique([transactionHash, index])
}
